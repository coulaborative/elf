<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <com.fenlisproject.elf.core.widget.ExtendedEditText
        android:id="@+id/edittext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.fenlisproject.elf.core.widget.ExtendedEditText
        android:id="@+id/edittext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.fenlisproject.elf.core.widget.ExtendedButton
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/material_deep_teal_200"
        android:gravity="center"
        android:text="Click Me!" />

    <com.fenlisproject.elf.core.widget.ExtendedCheckBox
        android:id="@+id/checkbox1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkbox 1" />

    <View
        android:id="@+id/touchpad1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#DDD" />

    <com.fenlisproject.elf.core.widget.ExtendedTextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
